            @Html.DisplayName("Miestas")
        </th>
        <th>
            @Html.DisplayName("Adresas")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pavadinimas)
        </td>
