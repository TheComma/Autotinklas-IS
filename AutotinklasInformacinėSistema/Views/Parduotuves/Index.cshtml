@model IEnumerable<AutotinklasInformacinėSistema.Parduotuve>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Parduotuvės pavadinimas")
        </th>
